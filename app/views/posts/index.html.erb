<h1>Wall Posts <% if @tag %><small><%= link_to "All posts", posts_path, class: 'btn btn-info' %></small><% end %></h1>

<% if @tag %>
<h2>Posts tagged with <%= @tag %></h2>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Tags</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td>  <% post.tags.each do |tag| %>
                <%= link_to tag, posts_path(:tag => tag), class: 'btn btn-info btn-sm' %>
              <% end %>
        </td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @posts %>
<br>

<%= link_to 'New Post', new_post_path %>
